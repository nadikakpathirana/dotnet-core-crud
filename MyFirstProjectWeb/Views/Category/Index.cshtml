@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-0 pb-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>  
    </div>
</div>

<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>DispayOrder</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td style="width:20%">@category.Id</td>
                <td style="width:40%">@category.Name</td>
                <td style="width:40%">@category.DisplayOrder</td>
            </tr>
        }

    </tbody>
</table>

